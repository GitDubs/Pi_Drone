<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.keablerman.myapplication.TestDeck">

    <Button
        android:id="@+id/killAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="58dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="onClick"
        android:text="Kill Motors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/escSpeed2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/down1"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:rotation="180"
        app:srcCompat="@drawable/arrow_up"
        app:layout_constraintLeft_toRightOf="@+id/up1"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/up1"
        android:layout_width="66dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/arrow_up"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/up2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="322dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/escSpeed1"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginRight="216dp"
        android:layout_marginTop="16dp"
        android:text="@string/ESC1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/up1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/escSpeed2"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:text="@string/ESC2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/escSpeed3"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="52dp"
        android:text="@string/ESC3"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/escSpeed4"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginBottom="199dp"
        android:layout_marginRight="216dp"
        android:text="@string/ESC4"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/up4" />

    <ImageButton
        android:id="@+id/up2"
        android:layout_width="66dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/arrow_up"
        android:layout_marginLeft="322dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="153dp" />

    <ImageButton
        android:id="@+id/down2"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:rotation="180"
        app:srcCompat="@drawable/arrow_up"
        app:layout_constraintLeft_toRightOf="@+id/up2"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/down1" />

    <ImageButton
        android:id="@+id/up3"
        android:layout_width="66dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/arrow_up"
        app:layout_constraintLeft_toRightOf="@+id/escSpeed3"
        android:layout_marginLeft="216dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="89dp" />

    <ImageButton
        android:id="@+id/up4"
        android:layout_width="66dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/arrow_up"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="322dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/down3"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:rotation="180"
        app:srcCompat="@drawable/arrow_up"
        app:layout_constraintLeft_toRightOf="@+id/up3"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/down2" />

    <ImageButton
        android:id="@+id/down4"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:rotation="180"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/up4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/down3"
        app:srcCompat="@drawable/arrow_up" />

    <SeekBar
        android:id="@+id/dSpeed"
        android:layout_width="121dp"
        android:layout_height="30dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="4dp"
        android:max="9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/allDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/arrow_up"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="68dp" />

    <ImageButton
        android:id="@+id/allUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/arrow_up"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dSpeed"
        android:layout_marginTop="39dp" />

</android.support.constraint.ConstraintLayout>
